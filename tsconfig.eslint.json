  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "features/**/*.ts",
    "features/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "theme/**/*.ts",
    "theme/**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ]
}

